<?xml version="1.0"?>
<rolemap>
  <permissions>
    <!-- Map the "add" permissions for the various content types. Note that
         we let the "Contributor" role (in a folder) be allowed to add content
         when the "Owner" is, so that we can effectively delegate control
         over a folder. Some content types, such as merchant folders
         are considered to be so "structural" that only administrators
         can add them.
      -->
    <permission name="HejaSverige: Add Merchant Folder" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
    </permission>
    <permission name="HejaSverige: Add Merchant" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
    <permission name="HejaSverige: Add Store" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
    <permission name="HejaSverige: Add Pos" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>

    <permission name="HejaSverige: Add District Folder" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
    </permission>
    <permission name="HejaSverige: Add District" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
    <permission name="HejaSverige: Add Council" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
    <permission name="HejaSverige: Add Club" acquire="False">
        <role name="Manager" />
        <role name="Site Administrator" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
  </permissions>
</rolemap>